<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".MainActivity">

    <LinearLayout android:gravity="center_horizontal"
        android:id="@+id/linearLandingPage"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:background="@drawable/img_rectangle6"
        android:orientation="vertical" style="@style/groupStylewhite_A700">

        <LinearLayout
            android:id="@+id/linearColumnnicecookrone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="34dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="33dp"
            android:layout_marginBottom="40dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageNiceCookrOne"
                android:layout_width="match_parent"
                android:layout_height="88dp"
                android:scaleType="fitXY"
                android:src="@drawable/img_nicecookr1"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />

            <TextView
                android:id="@+id/txtExplorethepos"
                style="@style/txtPoppinssemibold16_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:gravity="center_horizontal"
                android:text="@string/msg_explore_the_pos"
                tools:text="@string/msg_explore_the_pos" />

            <TextView
                android:id="@+id/txtHeadertitle"
                style="@style/txtPoppinssemibold50"
                android:textSize="50sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="186dp"
                android:layout_marginEnd="10dp"
                android:gravity="center_horizontal"
                android:text="@string/lbl_start_cooking"
                tools:text="@string/lbl_start_cooking" />

            <TextView
                android:id="@+id/txtCaption"
                style="@style/txtPoppinsregular16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="10dp"
                android:ellipsize="end"
                android:gravity="center_horizontal"
                android:singleLine="true"
                android:text="@string/msg_simple_way_to_f"
                tools:text="@string/msg_simple_way_to_f" />

            <LinearLayout
                android:id="@+id/linearMediumButton"
                style="@style/groupStylegray_900cornerRadius"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="62dp"
                android:layout_marginEnd="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtLabel"
                    style="@style/txtPoppinssemibold16_1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="60dp"
                    android:gravity="center"
                    android:layout_marginTop="14dp"
                    android:layout_marginBottom="14dp"
                    android:layout_weight="0.87"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="@string/lbl_get_started"
                    tools:text="@string/lbl_get_started" />

                <ImageView
                    android:id="@+id/imageArrowright"
                    android:layout_width="13dp"
                    android:layout_height="11dp"
                    android:layout_marginStart="23dp"
                    android:layout_marginTop="21dp"
                    android:layout_marginEnd="53dp"
                    android:layout_marginBottom="21dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_arrowright"
                    tools:ignore="ContentDescription"
                    tools:src="@drawable/img_arrowright" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>