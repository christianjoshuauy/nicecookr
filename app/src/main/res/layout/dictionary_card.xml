<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout android:gravity="start"
        android:id="@+id/linearStep4"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical"
        style="@style/grayUnderline">
        <TextView android:ellipsize="end"
            android:id="@+id/txtWord"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:singleLine="true"
            android:text="@string/lbl_al_dente"
            style="@style/txtPoppinssemibold11_2"/>
        <TextView android:id="@+id/txtDefinition"
            android:layout_height="wrap_content"
            android:layout_marginBottom="19dp"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="3dp"
            android:layout_width="match_parent"
            android:text="@string/msg_lorem_ipsum_tem3"
            style="@style/txtPoppinsregular11_2"/>
    </LinearLayout>

</androidx.cardview.widget.CardView>